{% include 'header.twig' %}
<section class="page-title-area">
   <div class="d-table">
      <div class="d-table-cell">
         <div class="container">
            <div class="page-title-content">
               <h1>Banka Hesapları</h1>
               <ul class="back-to-home">
                  <li><a href="/">Ana Sayfa</a></li>
                  <li>Banka Hesapları</li>
               </ul>
            </div>
         </div>
      </div>
   </div>
</section>
<br>
<section class="services-details-section">
   <div class="container">
      <div class="row">
          
                  {% for bank in bankAccounts %}  

          
         <div class="col-lg-4 col-md-6">
            <div class="pricing-content">
               <img src="{{ bank['bank_gorsel'] }}" style="height: 80px">
               <h3>{{ bank['bank_name'] }}</h3>
               <p></p>
                <table class="table">
                
                  <tbody>
                    <tr>
                      <th scope="row">Ad Soyad</th>
                      <td>{{ bank['bank_alici'] }}</td>
                    </tr>
                    <tr>
                      <th scope="row">IBAN</th>
                      <td><code>{{ bank['bank_iban'] }}</code></td>
                    </tr>
                    <tr>
                      <th scope="row">Hesap No</th>
                      <td>{{ bank['bank_hesap'] }}</td>
                    </tr>
                       <tr>
                      <th scope="row">Şube</th>
                      <td>{{ bank['bank_sube'] }}</td>
                    </tr>
                  </tbody>
                </table>
          </div>
         </div>
         {% endfor %}
      </div>
   </div>
   </div>
</section>
<br><br>
{% include 'footer.twig' %}