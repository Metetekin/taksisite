{% include 'header.twig' %}

<section class="page-title-area">
   <div class="d-table">
      <div class="d-table-cell">
         <div class="container">
            <div class="page-title-content">
               <h1>{{ category['category_name'] }}</h1>
               <ul class="back-to-home">
                  <li><a href="/">Ana Sayfa</a></li>
                  <li>{{ category['category_name'] }}</li>
               </ul>
            </div>
         </div>
      </div>
   </div>
</section>
<section class="pricing-section ptb-100">
   <div class="container">
      <div class="row">
        {% for product in productList %}
         <div class="col-lg-6 col-md-6">
            <div class="pricing-content">
               <img src="{{ product['product_image'] }}">
               <h3>{{ product['product_name'] }}</h3>
               <span><sup>{{ currency }}</sup>{{ product['product_price'] }}</sub></span>
               <p>{{ product['product_content'] }}</p>
               {% if settings['site_maintenance'] == 1 %}
                   <a href="odeme/{{ product['product_id'] }}" class="default-btn">Satın Al</a>
               {% else %}
                 <a href="iletisim" class="default-btn">İletişime Geç</a>
               {% endif %}

            </div>
         </div>
        {% endfor %} 
       

      </div>
   </div>
</section>

{% include 'footer.twig' %}
