{% include 'header.twig' %}

<section class="page-title-area">
   <div class="d-table">
      <div class="d-table-cell">
         <div class="container">
            <div class="page-title-content">
               <h1>{{ product['product_name'] }}</h1>
               <ul class="back-to-home">
                  <li><a href="/">Satın Al</a></li>
                  <li>Ödeme Yap</li>
               </ul>
            </div>
         </div>
      </div>
   </div>
</section>

<div class="form-wrapper" style="margin-bottom: 0px;">

        {% if errorText %}
            <div class="alert alert-dismissible alert-danger">
               {{ errorText }}
            </div>
            <hr>
        {% endif %}
        {% if successText %}
            <div class="alert alert-dismissible alert-success">
               {{ successText }}
            </div>
            <hr>
        {% endif %}
    <form method="POST" action="">
   <div class="row">
      <div class="col-lg-4 col-md-6">
         <label>Ad Soyad</label>
         <div class="form-group">
            <input type="text" class="form-control" name="name" required>
         </div>
      </div>
      <div class="col-lg-4 col-md-6">
         <label>Telefon Numarası</label>
         <div class="form-group">
            <input type="text" class="form-control" name="telephone" required>
         </div>
      </div>
      <div class="col-lg-4 col-md-6">
         <label>E-Posta Adresi</label>
         <div class="form-group">
            <input type="email" class="form-control" name="email" required>
         </div>
      </div>
      <div class="col-lg-4 col-md-6">
         <div class="form-group">
            <label>Ödeme Yöntemi</label>
            <select class="form-control" name="payment_type">
                {% for payment in paymentsList %}
                  <option value="{{ payment['id'] }}">{{ payment['method_name'] }}</option>
                {% endfor %}
            </select>
         </div>
      </div>
      <div class="col-lg-8">
         <div class="form-group">
            <label>Adres</label>
            <textarea class="form-control" name="address" placeholder="İL / İLÇE / MAHALLE / CADDE VEYA SOKAK / DIŞ KAPI NUMARASI / DAİRE NUMARASI"></textarea>
         </div>
      </div>    
            <div class="col-lg-12">
         <div class="form-group">
            <label>Sipariş Notunuz</label>
            <textarea class="form-control" rows="5" name="order_note" placeholder="Teşekkürler..."></textarea>
         </div>
      </div>    
      <div class="col-lg-12 col-md-12">
         <button type="submit" class="default-btn">Ödeme Yap ({{ product['product_price'] }}{{ currency }})</button>
      </div>
      </form>
   </div>
</div>

{% include 'footer.twig' %}
